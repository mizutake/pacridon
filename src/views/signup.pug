extends layout.pug
block head
  title ユーザー登録
block content
  .row
    .col-md-6.col-md-offset-3
      .page-header
        h1 ユーザー登録
      form(action="/signup" method="post")
        .form-group
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-envelope
            input.form-control(type="email" name="email" placeholder="メールアドレス" requirerd)
        .form-group
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            input.form-control(type="nickname" name="nickname" placeholder="ニックネーム" requirerd)
        .form-group
          .input-group
            span.input-group-addon
              i.glyphicon.glyphicon-lock
            input.form-control(type="password" name="password" placeholder="パスワード" requirerd)
        .form-group
          input.btn.btn-primary.btn-lg(type="submit" value="登録")